    <style name="text.18.gray.bold.title" tools:keep="@style/text_18_gray_bold_title">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="text.18.gray.length10" tools:keep="@style/text_18_gray_length10">
        <item name="android:maxLength">10</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="text.20.gray" tools:keep="@style/text_20_gray">
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="text.24.gray" tools:keep="@style/text_24_gray">
