<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="DialogTheme" parent="android:style/Theme.Dialog">
        <!-- 是否没有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--anim-->
    <style name="DialogAnimBottom">
        <item name="android:windowEnterAnimation">@anim/dialog_push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_push_bottom_out</item>
    </style>

    <!--anim-->
    <style name="DialogAnimScaleCenter" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_scale_center_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_scale_center_out</item>
    </style>


    <style name="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">5dp</item>
    </style>


    <style name="text.10">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="text.12">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text.14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text.16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text.18">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text.20" tools:keep="@style/text_20">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="text.24" tools:keep="@style/text_24">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="text.30" tools:keep="@style/text_30">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="text.35" tools:keep="@style/text_35">
        <item name="android:textSize">35sp</item>
    </style>


    <!--深灰色-->
    <style name="text.10.gray" tools:keep="@style/text_10_gray">
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="text.12.gray">
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="text.14.gray">
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="text.14.gray.bold">
