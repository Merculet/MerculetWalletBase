    <style name="text.35.gray.length10" tools:keep="@style/text_35_gray_length10">
        <item name="android:maxLength">10</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="text.35.gray.length10.bold" tools:keep="@style/text_35_gray_length10_bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text.30.gray.bold" tools:keep="@style/text_30_gray_bold">
        <item name="android:textStyle">bold</item>
    </style>

    <!--白色·真 start-->

    <style name="text.14.white">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text.14.white.bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text.16.white" tools:keep="@style/text_16_white">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text.16.white.bold" tools:keep="@style/text_18_white_bold">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="text.18.white" tools:keep="@style/text_18_white">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text.18.white.bold" tools:keep="@style/text_18_white_bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text.18.white.bold.title" tools:keep="@style/text_18_white_bold_title">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="text.20.white" tools:keep="@style/text_20_white">
        <item name="android:textColor">@color/white</item>
