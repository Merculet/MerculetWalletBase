    <!--浅灰色-->
    <style name="text.10.light_gray">
        <item name="android:textColor">@color/text_light_gray</item>
    </style>

    <style name="text.12.light_gray">
        <item name="android:textColor">@color/text_light_gray</item>
    </style>

    <style name="text.14.light_gray">
        <item name="android:textColor">@color/text_light_gray</item>
    </style>

    <style name="text.16.light_gray" tools:keep="@style/text_16_light_gray">
        <item name="android:textColor">@color/text_light_gray</item>
    </style>

    <!--edit-->
    <style name="edit" tools:keep="@style/edit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/darker_gray</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="edit.12" tools:keep="@style/edit_12">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="edit.12.gray" tools:keep="@style/edit_12_gray">
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="edit.12.gray.number" tools:keep="@style/edit_12_gray_number">
        <item name="android:digits">1234567890</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="edit.12.gray.decimal" tools:keep="@style/edit_12_gray_decimal">
        <item name="android:digits">1234567890.</item>
        <item name="android:inputType">number</item>
    </style>


    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@drawable/selector_btn_text_color</item>
        <item name="android:background">@drawable/shape_btn_bg</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="line.darker_gray">
        <item name="android:background">@android:color/darker_gray</item>
    </style>



    <declare-styleable name="MultiStatusView">
        <attr name="loadingView" format="reference"/>
        <attr name="errorView" format="reference"/>
        <attr name="emptyView" format="reference"/>
    </declare-styleable>

</resources>